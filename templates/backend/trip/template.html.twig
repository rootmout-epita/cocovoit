{% extends"backend/template.html.twig" %}

{% block section %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">

    <div class="container">
        <div class="row">
            <div class='col-sm-6'>
                <div class="form-group">
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control" />
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    {{ form_start(form) }}
    <div class="container text-center">
        <div class="m-0 p-0">
            {{ form_row(form.departure_place, {'label': 'Ville de départ','attr': {placeholder: 'ex: Chicoutimi'}}) }}
        </div>
        <div class="">
            {{ form_row(form.arrival_place, {'label': 'Ville d\'arrivée','attr': {placeholder: 'ex: N\'importe où'}}) }}
        </div>
        <div class="">
            {{ form_row(form.departure_schedule, {'label': 'Heure et date de départ','attr':{min: "now"|date("d/m/Y")}}) }}
        </div>
        <div class="">
            {{ form_row(form.duration, {'label': 'Durée','attr':{}}) }}
        </div>
        <div class="">
            {{ form_row(form.nbr_places, {'label': 'Nombre de places','attr': {placeholder: 'ex: 3'}}) }}
        </div>
        <div class="">
            {{ form_row(form.price, {'label': 'Prix pour une place','attr': {placeholder: 'ex: 6'}}) }}
        </div>
    </div>
    <br/>
    {{ form_widget(form) }}
        <a href="{{ path('user.dashboard') }}" class="btn btn-primary">Retour</a>
        <button type="submit" class="btn btn-success">Valider</button>
    {{ form_end(form) }}



{% endblock %}