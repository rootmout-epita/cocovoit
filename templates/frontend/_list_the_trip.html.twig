{% for trip in trips %}
    <div class="card w-100">
        <div class="card-body d-flex flex-row justify-content-around">
            <div class="mr-2 row" style="width: 20%">
                <div class="font-weight-light my-auto">Départ<br/><br/>Arrivée</div>
            </div>
            <div class="mr-2" style="width: 20%">
                <h5 class="card-title my-auto">{{ trip.getDeparturePlace() }}</h5>
                <hr/>
                <h5 class="card-title my-auto">{{ trip.getArrivalPlace() }}</h5>
            </div>
            <div class="flex-fill">
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            </div>
            <div class="row mr-2">
                <a href="#" class="btn btn-primary my-auto">Button</a>
            </div>
        </div>
    </div>
    <br/>
{% else %}
